<Window x:Class="KnkForms.Windows.ConfigureConnections"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnkForms"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="600">
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="0,0,0,50" />
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
