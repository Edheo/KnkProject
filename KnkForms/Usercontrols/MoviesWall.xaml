<UserControl x:Class="KnkForms.Usercontrols.MoviesWall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KnkForms.Usercontrols"
             xmlns:wpfa="clr-namespace:WpfAutoGrid;assembly=WpfAutoGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>

        <UniformGrid>

            <!-- Grid of 4 colors -->
            <wpfa:AutoGrid 
                HorizontalAlignment="Stretch"
                Name="autoGrid"
                    ColumnCount="2"
                    ColumnWidth="*"
                    Rows="*,*"
                    ChildMargin="2"
                    Margin="5">

                <Rectangle Fill="Blue" />
                <Rectangle Fill="Red" />
                <Rectangle Fill="Green" />
                <local:MovieThumb />

            </wpfa:AutoGrid>


        </UniformGrid>
    </ScrollViewer>            
</UserControl>
